---
import "../styles/global.css";
import "@fontsource/marck-script";
import logo from "../assets/logo.png";
import WaveBackground from "../components/WaveBackgroundS.astro";
import BackgroundSlider from "./BackgroundSlider.jsx";
import icono from "../assets/icono.png";
import RecuadroInicial from "./RecuadroInicial.astro";
---

<header class="relative w-full h-fit">
  <div
    class="absolute w-full flex flex-row justify-between z-[99] items-center p-4"
  >
    <img src={icono.src} alt="Logo de la empresa" class="w-38" />
    <p
      class="absolute left-1/2 top-[35%] -translate-x-1/2 -translate-y-1/2 text-black text-5xl font-marck"
    >
      Bienvenidos
    </p>
    <span></span>
  </div>
  <div class="absolute z-10 w-full h-64 top-0">
    <WaveBackground />
  </div>
</header>

<div class="flex justify-center space-x-4 p-4 mt-12">
  <RecuadroInicial titulo="Título 1" icono={icono.src} boton="Botón 1" />
  <RecuadroInicial titulo="Título 2" icono={icono.src} boton="Botón 2" />
</div>

<!-- Espacio para los derechos reservados -->
<footer class="text-center py-6 mt-10 bg-gray-800 text-white">
  <p>&copy; 2025 Derechos reservados</p>
</footer>
