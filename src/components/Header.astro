---
import "../styles/global.css";
import "@fontsource-variable/nunito";
import { FaTiktok, FaWhatsapp } from "react-icons/fa";
import { SiTripadvisor } from "react-icons/si";
import logo from "../assets/logo.png";
import logov from "../assets/logov.jpg";

import icono from "../assets/icono.png";
---

<header class="relative w-full h-fit">
  <div class="absolute w-full grid grid-cols-3 items-center z-[99] p-4">
    <div class="flex justify-start">
      <a href="/"
        ><img src={logo.src} alt="Logo de la empresa" class="w-68" /></a
      >
    </div>

    <div class="flex justify-center">
      <nav
        class="border border-white rounded-full px-6 py-2 flex space-x-6 items-center text-white text-sm font-semibold whitespace-nowrap bg-black/5 min-w-[525px]"
      >
        <a href="#" class="px-4 py-1 rounded-full bg-green-900/50">INICIO</a>
        <a
          href="#"
          class="inline-block text-center min-w-[140px] py-1 rounded-full transition-all duration-100
         bg-transparent hover:bg-green-950 hover:px-2 hover:text-white"
        >
          SOBRE NOSOTROS
        </a>

        <div class="relative group">
          <button
            class="text-center min-w-[90px] py-1 rounded-full transition-all duration-200
                   bg-transparent hover:bg-green-950 hover:px-2 hover:text-white flex items-center justify-center gap-1"
          >
            TOURS
            <span
              class="transform transition-transform duration-200 group-hover:rotate-180"
            >
              &#9662;
            </span>
          </button>
        </div>

        <a
          href="#"
          class="inline-block text-center min-w-[90px] py-1 rounded-full transition-all duration-100
         bg-transparent hover:bg-green-950 hover:px-2 hover:text-white"
        >
          CONTACTO
        </a>
      </nav>
    </div>

    <!-- Botón hamburguesa -->
    <div class="flex justify-end p-4">
      <button id="hamburgerBtn">
        <svg
          width="28"
          height="28"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-white cursor-pointer"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 6l16 0"></path>
          <path d="M4 12l16 0"></path>
          <path d="M4 18l16 0"></path>
        </svg>
      </button>
    </div>

    <div
      id="sidebar"
      class="fixed top-0 right-0 h-full w-80 bg-white text-black p-6 transform translate-x-full transition-all duration-700 ease-out z-50"
    >
      <button id="closeBtn" class="text-black text-2xl mb-6 cursor-pointer">
        &times;
      </button>

      <img src={logov.src} alt="Logo de la empresa" class="w-48 items-center" />

      <!--       <h1 class="text-4xl font-serif mb-4">JAHLEX TRAVEL ADVENTURE</h1>
 -->
      <p class="mb-6 mt-4 text-sm text-black">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit...
      </p>

      <h2 class="text-xl font-semibold mb-2">CONTACTANOS:</h2>
      <p class="text-sm">Direccion</p>
      <p class="text-sm mt-2">(+51) 999 999 999</p>
      <p class="text-sm">jahlex@mail.com</p>

      <div class="flex space-x-4 mt-6 text-xl text-green-900">
        <a
          href="https://www.tiktok.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <FaTiktok className="hover:text-green-950" />
        </a>

        <a
          href="https://twitter.com"
          target="_blank"
          class="text-white hover:text-green-950"
        >
          <i class="fab fa-twitter"></i>
        </a>

        <a
          href="https://facebook.com"
          target="_blank"
          class="text-white hover:text-green-950"
        >
          <i class="fab fa-facebook"></i>
        </a>

        <a
          href="https://youtube.com"
          target="_blank"
          class="text-white hover:text-gray-400"
        >
          <i class="fab fa-youtube"></i>
        </a>
      </div>
    </div>

    <div
      id="overlay"
      class="fixed inset-0 bg-black/40 opacity-0 transition-opacity duration-300 ease-in-out hidden z-40"
    >
    </div>

    <script>
      const hamburgerBtn = document.getElementById("hamburgerBtn");
      const sidebar = document.getElementById("sidebar");
      const overlay = document.getElementById("overlay");
      const closeBtn = document.getElementById("closeBtn");

      if (hamburgerBtn && sidebar && overlay && closeBtn) {
        hamburgerBtn.addEventListener("click", () => {
          if (sidebar.classList.contains("translate-x-full")) {
            overlay.classList.remove("hidden");
            overlay.classList.add("opacity-100");

            sidebar.classList.remove("translate-x-full", "opacity-0");
            sidebar.classList.add("translate-x-0", "opacity-100");
          }
        });

        closeBtn.addEventListener("click", () => {
          sidebar.classList.remove("opacity-100", "translate-x-0");
          sidebar.classList.add("translate-x-full", "opacity-0");

          overlay.classList.remove("opacity-100");
          overlay.classList.add("opacity-0");

          setTimeout(() => {
            overlay.classList.add("hidden");
          }, 700);
        });

        overlay.addEventListener("click", () => {
          sidebar.classList.remove("opacity-100", "translate-x-0");
          sidebar.classList.add("translate-x-full", "opacity-0");

          overlay.classList.remove("opacity-100");
          overlay.classList.add("opacity-0");

          setTimeout(() => {
            overlay.classList.add("hidden");
          }, 700);
        });

        sidebar.addEventListener("click", (e) => {
          e.stopPropagation();
        });
      } else {
        console.warn(
          "Uno o más elementos del menú no fueron encontrados en el DOM."
        );
      }
    </script>
  </div>
</header>
